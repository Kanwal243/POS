@page "/purchase-order"
@using EyeHospitalPOS.Models
@using EyeHospitalPOS.Helper
@using EyeHospitalPOS.Data
@using Microsoft.EntityFrameworkCore
@inject IPurchaseOrderService PurchaseOrderService
@inject LoginManager LoginManager
@inject NavigationManager Navigation

<PageTitle>Purchase Orders - Eye Hospital POS</PageTitle>

@if (LoginManager.CurrentUser == null)
{
    <div class="alert alert-warning m-4">Please login to access this page.</div>
}
else
{
    <div class="page-container p-4">
        <!-- Unified Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
             <div>
                <h3 class="mb-1 fw-bold">Purchase Orders</h3>
                <p class="text-muted tiny mb-0">Manage and track procurement from vendors</p>
             </div>
             <DxButton Text="New Purchase Order"
                       RenderStyle="ButtonRenderStyle.Primary"
                       IconCssClass="fa-solid fa-plus"
                       CssClass="premium-btn"
                       Click="@(() => Navigation.NavigateTo("/purchase-order/new"))" />
        </div>

        <div class="premium-card overflow-hidden">
            <div class="card-body p-0">
                <DxGrid Data="@purchaseOrders"
                        ShowFilterRow="false"
                        ShowSearchBox="true"
                        PageSize="20"
                        CssClass="enterprise-grid">
                    <Columns>
                        <DxGridDataColumn FieldName="PONumber" Caption="PO No" Width="150px">
                             <CellDisplayTemplate>
                                <span class="fw-bold text-primary">@context.Value</span>
                            </CellDisplayTemplate>
                        </DxGridDataColumn>
                        <DxGridDataColumn FieldName="Supplier.Name" Caption="Supplier" MinWidth="200">
                             <CellDisplayTemplate>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded p-2 me-2" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
                                        <i class="fa-solid fa-building-user text-muted tiny"></i>
                                    </div>
                                    <span>@context.Value</span>
                                </div>
                            </CellDisplayTemplate>
                        </DxGridDataColumn>
                        <DxGridDataColumn FieldName="OrderDate" Caption="Created On" Width="130px">
                             <CellDisplayTemplate>
                                <span class="text-muted small">@(((DateTime)context.Value).ToString("MMM dd, yyyy"))</span>
                            </CellDisplayTemplate>
                        </DxGridDataColumn>
                        <DxGridDataColumn FieldName="ApprovedBy" Caption="Approved By" Width="150px" />
                        <DxGridDataColumn FieldName="Description" Caption="Description" MinWidth="150" />
                        <DxGridDataColumn FieldName="Remarks" Caption="Remarks" MinWidth="150" />
                        <DxGridDataColumn FieldName="Status" Caption="Status" Width="120px" HeaderCssClass="text-center" CssClass="text-center">
                            <CellDisplayTemplate>
                                @{
                                    var status = (PurchaseOrderStatus)context.Value;
                                    var badgeClass = status switch
                                    {
                                        PurchaseOrderStatus.Active => "positive", // Green
                                        PurchaseOrderStatus.Completed => "positive", // Green/Primary
                                        PurchaseOrderStatus.Cancelled => "negative", // Red
                                        _ => "neutral" // Draft (Gray)
                                    };
                                }
                                <span class='trend-badge @badgeClass' style="min-width: 80px; justify-content: center;">
                                    @status
                                </span>
                            </CellDisplayTemplate>
                        </DxGridDataColumn>
                        <DxGridDataColumn FieldName="TransactionDate" Caption="Transaction Date" Width="130px">
                             <CellDisplayTemplate>
                                <span class="text-muted small">@(((DateTime)context.Value).ToString("MMM dd, yyyy"))</span>
                            </CellDisplayTemplate>
                        </DxGridDataColumn>
                         <DxGridDataColumn Caption="Actions" Width="100px" TextAlignment="GridTextAlignment.Center">
                            <CellDisplayTemplate>
                                @{
                                    var po = (PurchaseOrder)context.DataItem;
                                }
                                <div class="d-flex justify-content-center gap-2">
                                    <button class="btn btn-sm btn-light" title="View/Edit" @onclick="() => Edit(po.Id)">
                                        <i class="fa-solid @(po.Status == PurchaseOrderStatus.Draft ? "fa-pen" : "fa-eye")"></i>
                                    </button>
                                </div>
                            </CellDisplayTemplate>
                        </DxGridDataColumn>
                    </Columns>
                </DxGrid>
            </div>
        </div>
    </div>
}

@code {
    private List<PurchaseOrder> purchaseOrders = new List<PurchaseOrder>();

    protected override async Task OnInitializedAsync()
    {
        if (LoginManager.CurrentUser == null)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        await LoadPurchaseOrders();
    }

    private async Task LoadPurchaseOrders()
    {
        purchaseOrders = await PurchaseOrderService.GetAllPurchaseOrdersAsync();
    }

    private void Edit(int id)
    {
        Navigation.NavigateTo($"/purchase-order/{id}");
    }
}

