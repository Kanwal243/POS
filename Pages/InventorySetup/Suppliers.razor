@page "/supplier"
@using EyeHospitalPOS.Models
@using EyeHospitalPOS.Helper
@using EyeHospitalPOS.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext DbContext
@inject LoginManager LoginManager
@inject NavigationManager Navigation

<PageTitle>Suppliers - EyeCare POS</PageTitle>

@if (LoginManager.CurrentUser == null)
{
    <div class="alert alert-warning m-4">Please login to access this page.</div>
}
else
{
    <div class="page-container p-4">
        <!-- Unified Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
             <div>
                <h3 class="mb-1 fw-bold">Suppliers</h3>
                <p class="text-muted tiny mb-0">Manage your product vendors and contact details</p>
             </div>
             <DxButton Text="Add New Supplier"
                       RenderStyle="ButtonRenderStyle.Primary"
                       IconCssClass="fa-solid fa-plus"
                       CssClass="premium-btn"
                       Click="@(() => Navigation.NavigateTo("/suppliers/new"))" />
        </div>

        <div class="premium-card overflow-hidden">
            <div class="card-body p-0">
                <DxGrid Data="@suppliers"
                        ShowFilterRow="false"
                        ShowSearchBox="true"
                        PageSize="20"
                        CssClass="enterprise-grid"
                        RowClick="OnRowClick">
                    <Columns>
                        <DxGridDataColumn FieldName="Name" Caption="Supplier Name" MinWidth="250">
                            <CellDisplayTemplate>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded p-2 me-3" style="width: 38px; height: 38px; display: flex; align-items: center; justify-content: center;">
                                        <i class="fa-solid fa-truck-field text-primary"></i>
                                    </div>
                                    <span class="fw-bold">@context.Value</span>
                                </div>
                            </CellDisplayTemplate>
                        </DxGridDataColumn>
                        <DxGridDataColumn FieldName="Phone" Caption="Phone" Width="150px" />
                        <DxGridDataColumn FieldName="Email" Caption="Email" />
                        <DxGridDataColumn FieldName="Address" Caption="Address" />
                        <DxGridDataColumn FieldName="IsActive" Caption="Status" Width="120px" HeaderCssClass="text-center" CssClass="text-center">
                            <CellDisplayTemplate>
                                <span class='trend-badge @((bool)context.Value ? "positive" : "negative")' style="min-width: 70px; justify-content: center;">
                                    @((bool)context.Value ? "Active" : "Inactive")
                                </span>
                            </CellDisplayTemplate>
                        </DxGridDataColumn>
                    </Columns>
                </DxGrid>
            </div>
        </div>
    </div>
}

@code {
    private List<Supplier> suppliers = new List<Supplier>();

    protected override async Task OnInitializedAsync()
    {
        if (LoginManager.CurrentUser == null)
        {
            Navigation.NavigateTo("/login");
            return;
        }

        await LoadSuppliers();
    }

    private async Task LoadSuppliers()
    {
        suppliers = await DbContext.Suppliers.ToListAsync();
    }

    private void OnRowClick(GridRowClickEventArgs e)
    {
        var supplier = (Supplier)e.Grid.GetDataItem(e.VisibleIndex);
        Navigation.NavigateTo($"/suppliers/{supplier.Id}");
    }
}

