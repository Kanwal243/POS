@using EyeHospitalPOS.Models
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider
@inject EyeHospitalPOS.Helper.LoginManager LoginManager
@inject IJSRuntime JSRuntime

<div class="page">
    @* @if (LoginManager.IsLoggedIn)
    { *@
        <div class="sidebar @(isDrawerOpen ? "drawer-open" : "") @(isSidebarCollapsed ? "collapsed" : "")">
            <NavMenu OnToggleSidebar="ToggleSidebar" Collapsed="isSidebarCollapsed" />
        </div>
        
        @if (isDrawerOpen)
        {
            <div class="drawer-overlay" @onclick="ToggleDrawer"></div>
        }
    @* } *@

    <div class="main">
        @* @if (LoginManager.IsLoggedIn)
        { *@
                <div class="sidebar-header border-start-0">
                    <div class="d-flex align-items-center">
                        <button class="sidebar-toggle me-3" @onclick="ToggleSidebar">
                            <i class="fa-solid fa-bars"></i>
                        </button>
                    </div>
                    
                    <div class="header-actions">
                        <button class="btn btn-link text-muted me-3 p-0 theme-toggle shadow-none" @onclick="ToggleTheme">
                            <i class="fa-solid @(isDarkMode ? "fa-sun" : "fa-moon") fs-5"></i>
                        </button>
                        <LoginDisplay />
                    </div>
                </div>
        @* } *@

        <div class="content">
            @Body
        </div>
    </div>
</div>

@code {
    private bool isDrawerOpen = false;
    private bool isSidebarCollapsed = false;
    private bool isDarkMode = false;
    private bool isInitialized = false;

    protected override async Task OnInitializedAsync()
    {
        // 1. Try to load from session first
        await LoginManager.InitializeAsync();
        
        // 2. Fallback: If LoginManager failed to retrieve session (common in SignalR circuit)
        // but AuthStateProvider claims we are authenticated (from initial HttpContext),
        // we manually re-hydrate LoginManager from Claims.
        if (!LoginManager.IsLoggedIn)
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            
            if (user.Identity != null && user.Identity.IsAuthenticated)
            {
                 // Reconstruct User from Claims
                 LoginManager.CurrentUser = new User 
                 {
                     Id = user.FindFirst("UserId")?.Value ?? "",
                     UserName = user.FindFirst(ClaimTypes.Name)?.Value ?? user.Identity.Name ?? "User",
                     Email = user.FindFirst(ClaimTypes.Email)?.Value ?? "",
                     Role = new Role { Name = user.FindFirst(ClaimTypes.Role)?.Value ?? "User" }
                 };
            }
        }
        
        // Debug: Log if user is loaded
        Console.WriteLine($"MainLayout: LoginManager.IsLoggedIn = {LoginManager.IsLoggedIn}, User = {LoginManager.CurrentUser?.UserName}");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Re-initialize after first render to ensure session is loaded
            await LoginManager.InitializeAsync();
            
            try
            {
                // JS interop is only available after first render (client-side)
                var theme = await JSRuntime.InvokeAsync<string>("getTheme");
                isDarkMode = theme == "dark";
                isInitialized = true;
                
                // Force UI update after everything is ready
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error getting theme: {ex.Message}");
                isInitialized = true;
                StateHasChanged();
            }
        }
    }

    private async Task ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        await JSRuntime.InvokeVoidAsync("setTheme", isDarkMode ? "dark" : "light");
    }

    private void ToggleDrawer()
    {
        isDrawerOpen = !isDrawerOpen;
        StateHasChanged();
    }

    private void ToggleSidebar()
    {
        // For mobile: toggle drawer
        // For desktop: toggle sidebar collapse
        if (isDrawerOpen)
        {
            isDrawerOpen = false;
        }
        else
        {
            isDrawerOpen = true;
        }
        
        isSidebarCollapsed = !isSidebarCollapsed;
        StateHasChanged();
    }
}
